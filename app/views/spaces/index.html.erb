<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- Distrito -->
        <p class="lead">Distritos</p>
        <div class="list-group">
          <% @districts.each do |district| %>
            <%= link_to district.name, spaces_path(district_id: district.id), :class => "list-group-item" %>
          <% end %>
        </div>
         <!-- Eventos -->
        <p class="lead">Eventos</p>
        <div class="list-group">
          <% @districts.each do |district| %>
            <%= link_to district.name, spaces_path(district_id: district.id), :class => "list-group-item" %>
          <% end %>
        </div>
        
        
        
    </div>
    <div class="col-md-9">
      <div class="row">
        <% @spaces.each do |space| %>
          <div class="col-sm-6 col-lg-6 col-md-6">
              <div class="thumbnail">
                <%= image_tag space.content.url(:thumb) %>
                <div class="caption">
                    <h4 class="pull-right">$<%= space.price %></h4>
                    <h4>
                      <%= link_to space.name, space %>
                    </h4>
                    <p><%= space.description %></p>
                    <p><%= space.address %></p>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div> 
  </div>
</div>

<div class="container">
  <div style='width: 800px; height: 400px'>
  <div id="map" style='width: 800px; height: 400px;'></div>
  </div>
<script type="text/javascript">
  handler = Gmaps.build('Google');
handler.buildMap({
    provider: {
      disableDefaultUI: true
      // pass in other Google Maps API options here
    },
    internal: {
      id: 'map'
    }
  },
  function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  }
);
  </script>
</div>