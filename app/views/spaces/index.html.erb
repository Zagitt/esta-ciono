<div class="container">
  <div class="row">
    <div class="col-md-3">
        <p class="lead">Distrito</p>
        <div class="list-group">
          <% @districts.each do |district| %>
            <%= link_to district.name, search_page_path(district_id: district.id), :class => "list-group-item" %>
          <% end %>
        </div>
    </div>
    <div class="col-md-9">
      <div class="row">
        <% @spaces.each do |space| %>
          <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <%= image_tag space.content.url(:thumb) %>
                <div class="caption">
                    <h4 class="pull-right">$<%= space.price %></h4>
                    <h4>
                      <%= link_to space.name, space %>
                    </h4>
                    <p><%= space.description %></p>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div> 
  </div>
</div>