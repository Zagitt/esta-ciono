<div class="container page-subheader">
  <div class="pull-left">
    <%= link_to spaces_path,:class => "back" do %>
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
      Regresar
    <% end %>
  </div>
  <div class="pull-right">
    <%= link_to 'Reservar!', new_reservation_path(:space_id => @space.id),:class => "btn btn-success" %>
  </div>
</div>
<div class="container">
  <div class="col-sm-4">
    <%= image_tag @space.content.url(:medium), :class => "img-responsive" %>  
  </div>
  <div class="col-sm-8">
    <div class="page-header parking-header clearfix">
      <h1 class="pull-left"><%= @space.name %></h1>  
      <div class="pull-right parking-price">$<%= @space.price %></div>
    </div>
    <p><%= @space.description %></p>
    <p><strong>Direcci√≥n:</strong>
       <%= "#{@space.address}, #{@space.district.name}" %>
    </p>
  </div>
</div>